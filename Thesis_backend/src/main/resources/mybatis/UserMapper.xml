<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hu.elte.inf.backend.dao.UserMapper">

    <!-- ========================================== User ========================================== -->
    <!-- 通过用户id查询用户 -->
    <select id="getUserById" parameterType="long" resultType="hu.elte.inf.backend.sqlEntity.User">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <!-- 通过用户名查询用户 -->
    <select id="getUserByUserName" parameterType="String" resultType="hu.elte.inf.backend.sqlEntity.User">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <!-- 通过邮件查询用户 -->
    <select id="getUserByEmail" parameterType="String" resultType="hu.elte.inf.backend.sqlEntity.User">
        SELECT * FROM user WHERE email = #{email}
    </select>

    <!-- 插入新用户 -->
    <insert id="insertUser" parameterType="hu.elte.inf.backend.sqlEntity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (username, password, email, isAdmin, birthdate, gender, address)
        VALUES (#{username,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR}, #{email,jdbcType=VARCHAR}, false, #{birthdate,jdbcType=DATE}, #{gender,jdbcType=VARCHAR}, #{address,jdbcType=VARCHAR})
    </insert>

    <!-- 更新用户个人信息 -->
    <update id="updateUserInfo" parameterType="hu.elte.inf.backend.sqlEntity.User">
        UPDATE user
        <set>
            <if test="username != null">username = #{username},</if>
            <if test="email != null">email = #{email},</if>
            <if test="birthdate != null">birthdate = #{birthdate},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="address != null">address = #{address}</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 更新用户密码 -->
    <update id="updateUserPassword">
        UPDATE user SET password = #{newPassword} WHERE id = #{id}
    </update>

    <!-- ========================================== Artist ========================================== -->
    <!-- 根据ID获取艺术家信息 -->
    <select id="getArtistById" parameterType="long" resultType="hu.elte.inf.backend.sqlEntity.Artist">
        SELECT * FROM artists WHERE id = #{id}
    </select>

    <!-- 通过用户名查询用户 -->
    <select id="getArtistByName" parameterType="String" resultType="hu.elte.inf.backend.sqlEntity.Artist">
        SELECT * FROM artists WHERE name = #{name}
    </select>

    <!-- 插入艺术家数据 -->
    <insert id="insertArtist" parameterType="hu.elte.inf.backend.sqlEntity.Artist" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO artists (name, bio)
        VALUES (#{name,jdbcType=VARCHAR}, #{bio,jdbcType=VARCHAR})
    </insert>

    <!-- 删除艺术家数据 -->
    <delete id="deleteArtist" parameterType="long">
        DELETE FROM artists WHERE id = #{id}
    </delete>

    <!-- 更新艺术家信息 -->
    <update id="updateArtist" parameterType="hu.elte.inf.backend.sqlEntity.Artist">
        UPDATE artists
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="bio != null">bio = #{bio}</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- ========================================== Artwork ========================================== -->
    <!-- 根据ID获取艺术品 -->
    <select id="getArtworkById" parameterType="long" resultType="hu.elte.inf.backend.sqlEntity.Artwork"  >
        SELECT * FROM artworks WHERE id = #{id}
    </select>

    <!-- 插入艺术品数据 -->
    <insert id="insertArtwork" parameterType="hu.elte.inf.backend.sqlEntity.Artwork" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO artworks (artist_id, title, description, price, image_url, type)
        VALUES (#{artistId,jdbcType=BIGINT}, #{title,jdbcType=VARCHAR}, #{description,jdbcType=VARCHAR}, #{price,jdbcType=DECIMAL}, #{imageUrl,jdbcType=VARCHAR}, #{type,jdbcType=VARCHAR})
    </insert>

    <!-- 删除艺术品数据 -->
    <delete id="deleteArtwork">
        DELETE FROM artworks WHERE id = #{id}
    </delete>

    <!-- 更新艺术品信息 -->
    <update id="updateArtwork" parameterType="hu.elte.inf.backend.sqlEntity.Artwork">
        UPDATE artworks
        <set>
            <if test="title != null">title = #{title},</if>
            <if test="description != null">description = #{description},</if>
            <if test="price != null">price = #{price},</if>
            <if test="image_url != null">image_url = #{imageUrl},</if>
            <if test="type != null">type = #{type}</if>
        </set>
        WHERE id = #{id}
    </update>





</mapper>